<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_entrega"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.aluno.getre.NewEntregaActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contextClickable="true"
            android:textAlignment="center"
            android:layout_alignParentStart="true">

            <TextView
                android:text="Nova Entrega"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/frmNewEntrega_Title"
                android:textAlignment="center"
                android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.08">

            <TextView
                android:text="Cliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:layout_weight="1" />

            <TextView
                android:text="Nome Cliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/frmNewEntrega_TxtNomeCliente"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="41dp">

            <TextView
                android:text="Origem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:layout_weight="1" />

            <TextView
                android:text="Endereco Origem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/frmNewEntrega_TxtEnderecoOrigem"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_weight="0.11">
            <Button
                android:text="Selecione Origem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/frmNewEntrega_BtnCadEnderecoOrigem"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="41dp">

            <TextView
                android:text="Destino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:layout_weight="1" />

            <TextView
                android:text="Endereco Destino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/frmNewEntrega_TxtEnderecoDestino"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_weight="0.14">
            <Button
                android:text="Selecione Destino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/frmNewEntrega_BtnCadEnderecoDestino"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="41dp">

            <TextView
                android:text="Produto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                android:layout_weight="1" />

            <TextView
                android:text="Nome Produto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/frmNewEntrega_TxtProduto"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_weight="0.49">
            <Button
                android:text="Selecione Produto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/frmNewEntrega_BtnCadProduto"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="41dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="41dp">

                <Button
                    android:text="Cancelar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/frmNewEntrega_BtnVoltar"
                    android:layout_weight="1" />

                <Button
                    android:text="Gravar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/frmNewEntrega_BtnGravar"
                    android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
